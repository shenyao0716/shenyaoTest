	public JSONArray getImg(int id){
		List<cutimg> list=new MeetingDao().getMeetImg(id);
		
		JSONArray ja=new JSONArray();
		
		for(cutimg ct:list){
			JSONObject jo=new JSONObject();
			jo.put("imgsrc", ct.getImgsrc());
			jo.put("status", ct.getStatus());
			ja.add(jo);
		}
		
		return ja;
	}
	
